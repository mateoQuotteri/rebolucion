<!DOCTYPE html>
<html lang="en">
<head>
    <%-include ("./partials/head") %> 
    <link rel="stylesheet" href="/styles/home.css">
    <title>Home - Rebolucion</title>
</head>
<body class="background-blue">
  <div class="loading" id="loading">
    <div class="lds-spinner"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
</div>
    <header  class="hidden" id="header">
        <!--INICIO DEL HEADER -->
        <section class="img-container">
            <img src="/images/rebolucionLogoWebHeader.png" alt="">
        </section>



        <section class="header-btn-container" <% if (locals.loggedUser) { %> style=" display: none;"    <% } %>>
          <a class="header-a "href="http://localhost:3000/user/login">
            <button class="background-orange white button-with-bg">Ingresar</button>
          </a>
          <a class="header-a "href="http://localhost:3000/user/register">
            <button class="white background-transparent button-without-bg">Registrate</button>
          </a>
        </section>


        <section class="header-btn-container-my-profile" <% if (!locals.loggedUser) { %> style=" display: none;"    <% } %>>
                 
          <a class="header-a "href="http://localhost:3000/user/my-profile">
            <button class="background-orange white button-with-bg"> <i class="fa-solid fa-user"></i></button>
          </a>

          <a class="header-a "href="">
            <button style="background: transparent;" class=" orange button-with-bg"> <i style="background: transparent;" class="fa-brands fa-discord"></i></button>
          </a>
        </section>
    <!--FIN DEL HEADER-->
    </header>

    <main class="hidden" id="main">
        
        <div id="carouselExample" class="carousel slide">
          
          <div class="phrase-container background-blueForButtons ">
            <h1 class="white">
              Donde aprender Crypto y Web3<span class="orange"> ES F√ÅCIL Y GRATIS.</span> 
            </h1>
          </div>
          
          
          <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/images/homeImages/Rectangle 391.png" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/homeImages/Rectangle 398.png" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/homeImages/Rectangle 400.png" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <div class="container-mobile-image">
            <img src="/images/homeImages/mobileImage.png" alt="">
          </div>
        

        <section class="principal-section">
          <h2 class="white ">
            Aprenderas sobre:
          </h2>


          <section class="sub-section">

           
          <% thingsToLearn.forEach(thing => {%>
            <div class="false-box background-light-color-box-from-behind">
              <div class="background-light-color  div-inside">
                <i class="<%= thing.icon %>  orange icon-card"></i>
                <h6 class="white">
                  <%= thing.name %>
                </h6>
              </div>
            </div>
        <% }); %>
          
      </section>
  
        </section>

        <section class="second-section">
          <div class="video-container">
            <iframe src="https://www.youtube.com/embed/rBQLtcFDgrc" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen>

            </iframe>
          </div>


        </section>

        <div class="btn-container">
          <a class="white  background-orange"href="http://localhost:3000/aviso">
          <button class="extra-button white ">Aviso</button>
        </a>

        <a class="white background-orange"href="http://localhost:3000/module">
          <button class="extra-button white ">Modulos</button>
        </a>


        <a class="white background-orange"href="https://calendly.com/quotterimateo/30min">
          <button class="extra-button white ">Sponsors</button>
        </a>
        </div>

      
   
    </main>

    <footer class="background-footer">
      <section  class="footer-section">
        <a href="https://twitter.com/rebolucionnn">
        <i class="fa-brands fa-twitter"></i>
      </a>
      </section>
      <section class="footer-section">
        <a href="https://open.spotify.com/show/3EyKX9xEgU0K7WfyWXI9Sr">
        <i class="fa-solid fa-podcast"></i>
      </a>
      </section>
      <section class="footer-section">
        <a href="http://localhost:3000/contact-us">
        <i class="fa-solid fa-envelope"></i>
      </a>
      </section>
      <section class="footer-section">
        <a class="header-a "href="">
           <i  class="fa-brands fa-discord"></i>
        </a>
      </section>
    </footer>

</body>
<script src="/js/loadingWithHeader.js"></script>

</html>